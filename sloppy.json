{
  "project": "voice-computer",
  "services": [
    {
      "id": "vc-docs",
      "apps": [
        {
          "id": "open-kb",
          "image": "$docker_image",
          "instances": 1,
          "mem": 320,
          "domain": {
            "uri": "$domain",
            "redirectHttps": true
          },
          "ssl": false,
          "port_mappings": [
            {
              "container_port": 4444
            }
          ],
          "volumes": [
            {
              "container_path": "/var/openKB/data",
              "size": "8GB"
            }
          ],
          "health_checks": [
            {
              "type": "HTTP",
              "path": "/",
              "timeout_seconds": 20,
              "interval_seconds": 60,
              "max_consecutive_failures": 3,
              "grace_period_seconds": 300
            }
          ],
          "logging": null
        }
      ]
    }
  ]
}
