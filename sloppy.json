{
	"project": "vc-docs",
	"services": [
		{
			"id": "front-end",
			"apps": [
				{
					"id": "open-kb",
					"image": "$docker_image",
					"instances": 1,
					"mem": 256,
					"domain": {
						"uri": "$domain"
					},
					"ssl": false,
					"port_mappings": [{ "container_port": 4444 }],
					"volumes": [{
						"container_path": "/var/openKB/data",
						"size": "8GB"
					}],
					"env": {
						"MONGODB_CONNECTION_STRING": "$db"
					}
				}
			]
		},
		{
			"id": "database",
			"apps": [
				{
		          "id": "mongodb",
		          "image": "mongo:3.4.10",
		          "cmd": "mongod --smallfiles",
		          "instances": 1,
		          "mem": 512,
		          "ssl": false,
		          "volumes": [
		            {
		              "container_path": "/data/db",
		              "size": "8GB"
		            },
		            {
		              "container_path": "/data/configdb",
		              "size": "8GB"
		            }
		          ],
		        }
			]
		}
	]
}
